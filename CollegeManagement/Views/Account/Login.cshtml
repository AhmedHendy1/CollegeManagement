@model CollegeManagement.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class ="text-center fs-1 my-5" >@ViewData["Title"]</h2>
<form asp-action="Login" method="post" class="mt-5">
    <div class="form-floating mb-3">
        <input type="email" class="form-control" asp-for="Email" id="floatingInput" placeholder="name@example.com">
        <label for="floatingInput" asp-for="Email" class="text-black">Email address</label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input type="password" asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword" asp-for="Password" class="text-black">Password</label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <select asp-for="Role" class="form-control py-3">
            <option value="">Select Role</option>
            <option value="Admin">Admin</option>
            <option value="Employee">Employee</option>
            <option value="Student">Student</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <!-- Conditionally render the validation summary if there are any errors -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="form-group">
            <div class="alert alert-danger">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
        </div>
    }
    <div class="d-flex justify-content-center mt-5">
    <button type="submit" class="btn btn-primary my-3 px-5 fs-4 ">Login</button>
    </div>
</form>
