@model CollegeManagement.Models.StudentCourseViewModel

@{
    ViewData["Title"] = "Student Details";
}
@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}
<h2>@ViewData["Title"]</h2>

<div class="container mt-4">
    <div class="row">
        <!-- Student Details -->
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Student Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Model.Student.Name</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Student.Email</dd>

                        <dt class="col-sm-4">Department:</dt>
                        <dd class="col-sm-8">@Model.Student.Department.Name</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Enrolled Courses -->
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Enrolled Courses</h4>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        @foreach (var course in Model.Courses)
                        {
                            <li class="list-group-item">
                                <h5 class="mb-1">@course.Title</h5>
                                <p class="mb-1">@course.Description</p>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <a class="btn btn-primary mt-3" asp-action="Index">Back to Dashboard</a>
</div>
