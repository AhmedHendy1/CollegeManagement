@model CollegeManagement.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}
@{
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this course?</h3>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
    </dl>

    <!-- Display any validation error messages -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @ViewData.ModelState.Values.FirstOrDefault()?.Errors.FirstOrDefault()?.ErrorMessage
        </div>
    }

    <form asp-action="DeleteCourse">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Courses" class="btn btn-secondary">Back to List</a>
    </form>
</div>
