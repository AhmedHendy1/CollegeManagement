@model CollegeManagement.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}
@{
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this student?</h3>

<div>
    <h4>Student Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Date of Birth
        </dt>
        <dd class="col-sm-10">
            @Model.DateOfBirth.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Department
        </dt>
        <dd class="col-sm-10">
            @Model.Department.Name
        </dd>
    </dl>

    <form asp-action="DeleteStudent">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Students" class="btn btn-secondary">Back to List</a>
    </form>
</div>
