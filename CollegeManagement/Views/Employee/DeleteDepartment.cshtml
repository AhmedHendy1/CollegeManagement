@model CollegeManagement.Models.Department

@{
    ViewData["Title"] = "Delete Department";
}
@{
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this department?</h3>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
    </dl>

    <!-- Display any validation error messages -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="DeleteDepartment" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Departments" class="btn btn-secondary">Back to List</a>
    </form>
</div>
