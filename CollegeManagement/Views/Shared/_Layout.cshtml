<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CollegeManagement</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
   <header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow mb-3 py-1">
    <div class="container">
      <a class="navbar-brand fs-3" asp-controller="Home"
            asp-action="Index" >CollegeManagement</a>
      <button  class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target=".navbar-collapse"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse d-sm-inline-flex justify-content-end" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item ">
            <a class="nav-link  "  asp-area=""
                  asp-controller="Home"
                  asp-action="Index"
                  >Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link mx-4 "asp-area=""
                  asp-controller="Home"
                  asp-action="About"
                  >About</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
     <footer class="footer py-3 fs-6">
      <div class="container">
        &copy; 2024 - CollegeManagement - By
            <a href="https://www.linkedin.com/in/ahmed-helmy-0aba08252" class="text-muted" target="_blank">Ahmed Helmy</a>
      </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
