<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CollegeManagement</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <style>
        /* Make the body and html full height */
        html, body {
            height: 100%;
        }

        /* Use flexbox to ensure the footer stays at the bottom */
        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }

        /* Customize the sidebar */
        .offcanvas {
            width: 280px; /* Increased width */
            background-color: #343a40; /* Dark background */
            color: #ffffff; /* White text */
        }

        .offcanvas-header {
            justify-content: flex-start;
            background-color: #495057; /* Slightly lighter header */
        }

        .offcanvas-title {
            color: #ffffff;
            margin-left: 10px;
            font-weight: bold;
        }

        .btn-close {
            color: #ffffff;
        }

        /* Sidebar menu items */
        .list-group-item {
            background-color: #343a40;
            border: none;
            border-bottom: 1px solid white;
            padding: 20px 0;
            color: #ffffff;
            font-size: 16px;
        }

            .list-group-item:hover {
                background-color: #495057;
                cursor: pointer;
            }

            .list-group-item a {
                color: #ffffff;
                text-decoration: none;
            }

                .list-group-item a:hover {
                    color: #adb5bd;
                }

        /* Footer styling */
        footer {
            background-color: #f8f9fa;
            color: #6c757d;
            padding: 0.8rem;
            font-size: 0.9rem;
            text-align: center;
            position: relative;
        }

            footer a {
                color: #007bff;
            }

                footer a:hover {
                    color: #0056b3;
                }

        .navbar-brand {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
        }

        .navbar {
            position: relative;
        }

            .navbar .btn-outline-secondary {
                border: 1px solid white;
                color: white;
            }

                .navbar .btn-outline-secondary:hover {
                    background-color: #086e8a;
                    color: #ffffff;
                }

        .float-end {
            float: right;
        }

            .float-end form {
                display: inline-block;
            }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="btn btn-outline-secondary me-2" type="button" data-bs-toggle="offcanvas"
                        data-bs-target="#sidebar" aria-controls="sidebar">
                    ☰ Menu
                </button>

                <a class="navbar-brand" asp-area="">CollegeManagement</a>

                <div class="float-end">
                    <span>You signed in with <strong>@User.Identity.Name</strong></span>
                    <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger ms-2">Logout</button>
                    </form>
                </div>
            </div>
        </nav>

        <!-- Enhanced Sidebar -->
        <div class="offcanvas offcanvas-start" tabindex="-1" id="sidebar">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" style="color:aqua">Student Panel</h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="list-group">
                    <li class="list-group-item"><a asp-controller="Student" asp-action="Index"><i class="bi bi-speedometer2"></i> Student DashBoard</a></li>
                    <li class="list-group-item"><a asp-controller="Student" asp-action="Details"><i class="bi bi-info-circle"></i> Details</a></li>
                    <li class="list-group-item"><a asp-controller="Student" asp-action="ChangePassword"><i class="bi bi-key"></i> Change Password</a></li>
                </ul>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer py-3 fs-6">
        <div class="container">
            &copy; 2024 - CollegeManagement - By
            <a href="www.linkedin.com/in/ahmed-helmy-0aba08252" class="text-muted">Ahmed Helmy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
